.uni-tip {
		
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-orient: vertical;
		-webkit-box-direction: normal;
		-webkit-flex-direction: column;
		        flex-direction: column;
		
		padding: 15px;
		width: 300px;
		background-color: #fff;
		border-radius: 10px;
/* 		margin-top: 30%;
		margin-left: 10%; */
}
.uni-tip-title {
		margin-bottom: 10px;
		text-align: center;
		font-weight: bold;
		font-size: 16px;
		color: #333;
}
.uni-tip-content {
		/* padding: 15px;
 */
		font-size: 14px;
		color: #666;
}
.uni-tip-group-button {
		
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		
		-webkit-box-orient: horizontal;
		-webkit-box-direction: normal;
		-webkit-flex-direction: row;
		        flex-direction: row;
		margin-top: 20px;
}
.uni-tip-button {
		-webkit-box-flex: 1;
		-webkit-flex: 1;
		        flex: 1;
		text-align: center;
		font-size: 14px;
		color: #3b4144;
}

